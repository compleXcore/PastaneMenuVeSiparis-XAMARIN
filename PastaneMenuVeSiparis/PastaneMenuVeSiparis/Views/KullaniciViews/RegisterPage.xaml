<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PastaneMenuVeSiparis.Views.KullaniciViews.RegisterPage">
    <ContentPage.Content>
        <Grid RowDefinitions="*,2*">
            <Label Text="Kayıt Ol"
           FontSize="20"
           VerticalOptions="Center"
           HorizontalOptions="Center"/>
            <StackLayout Grid.Row="1">
                <Entry Text="{Binding Isim}" Placeholder="Isim"/>
                <Entry Text="{Binding Soyisim}" Placeholder="Soyisim"/>
                <Entry Text="{Binding KullaniciAdi}" Placeholder="Kullanıcı Adı"/>
                <Entry IsPassword="True"
               Text="{Binding Parola}" 
               Placeholder="Parola"/>
                <Label Text="{Binding ErrorMessage}"
           TextColor="Red"/>
                <Button Text="Kayıt Ol"
            Margin="0,10,0,0"
            Command="{Binding RegisterCommand}"/>
                <Label Text="Bir hesabınız var mı?"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"/>
                <Button Text="Giriş Yapın"
                Margin="0,10,0,0"
                Command="{Binding LoginCommand}"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>